{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*": ["./src/*"] },
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "declarations.d.ts"],
  "ts-node": {
    "compilerOptions": { "module": "CommonJS" }
  }
}
